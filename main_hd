#include "monty.h"

global_t opCode;

/**
 * free_opCode - frees the global variables
 *
 * Return: no return
 */
void free_opCode(void)
{
	free_dlistint(vglo.head);
	free(opCode.buffer);
	fclose(opCode.fd);
}

/**
 * start_opCode - initializes the global variables
 *
 * @fd: file descriptor
 * Return: no return
 */
void start_opCode(FILE *fd)
{
	opCode.lifo = 1;
	opCode.cont = 1;
	opCode.arg = NULL;
	opCode.head = NULL;
	opCode.fd = fd;
	opCode.buffer = NULL;
}

/**
 * check_input - checks if the file exists and if the file can
 * be opened
 *
 * @argc: argument count
 * @argv: argument vector
 * Return: file struct
 */
FILE *check_input(int argc, char *argv[])
{
	FILE *fd;

	if (argc == 1 || argc > 2)
	{
		dprintf(2, "USAGE: monty file\n");
		exit(EXIT_FAILURE);
	}

	fd = fopen(argv[1], "r");

	if (fd == NULL)
	{
		dprintf(2, "Error: Can't open file %s\n", argv[1]);
		exit(EXIT_FAILURE);
	}

	return (fd);
}

/**
 * main - Entry point
 *
 * @argc: argument count
 * @argv: argument vector
 * Return: 0 on success
 */
int main(int argc, char *argv[])
{
	void (*f)(stack_t **stack, unsigned int p_opcode);
	FILE *fd;
	size_t size = 256;
	ssize_t nlines = 0;
	char *lines[2] = {NULL, NULL};

	fd = check_input(argc, argv);
	start_opCode(fd);
	nlines = getline(&opCode.buffer, &size, fd);
	while (nlines != -1)
	{
		lines[0] = _strtoky(opCode.buffer, " \t\n");
		if (lines[0] && lines[0][0] != '#')
		{
			f = get_opcodes(lines[0]);
			if (!f)
			{
				dprintf(2, "L%u: ", opCode.cont);
				dprintf(2, "unknown instruction %s\n", lines[0]);
				free_opCode();
				exit(EXIT_FAILURE);
			}
			opCode.arg = _strtoky(NULL, " \t\n");
			f(&opCode.head, opCode.cont);
		}
		nlines = getline(&opCode.buffer, &size, fd);
		opCode.cont++;
	}

	free_opCode();

	return (0);
}
